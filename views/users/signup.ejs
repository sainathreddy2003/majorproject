<% layout("./layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input name="username"  type="text" id="username" class="form-control" required />
                    <div class="valid-feedback">looks good</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input name="email"  class="form-control" type="email" id="email" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input name="password"  class="form-control" type="password" id="password" required />
                    <div class="valid-feedback">looks good</div>
                </div>
                <button class="btn btn-success">Signup</button>
            </form>
        </div>
    </div>   
</body>