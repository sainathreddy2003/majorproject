      <div class="filter"></button>
        <div><button class="btn" name="category" value="Iconic cities"><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities </p></div></button>
    <div class="filter">
        <div><button class="btn" name="category" value="Mountains"><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains </p></div></button>
        <div class="filter">
          <div><button class="btn" name="category" value="Castles"><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles </p></div></button>
      <div class="filter">
          <div><button class="btn" name="category" value="Amazing pools"><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing pools </p></div></button>
          <div class="filter">
          <div><button class="btn" name="category" value="Camping"><i class="fa-solid fa-campground"></i></div>
        <p>Camping </p></div></button>
        <div class="filter">
          <div><button class="btn" name="category" value="Farms"><i class="fa-solid fa-tractor"></i></div>
          <p>Farms </p></div></button>
      <div class="filter">
          <div><button class="btn" name="category" value="Arctic"><i class="fa-regular fa-snowflake"></i></div>
          <p>Artic </p></div></button>
          <div class="filter">
            <div><button class="btn" name="category" value="Domes"><i class="fa-solid fa-landmark-dome"></i></div>
